{% extends '@admin/page.html.twig' %}
{% block stylesheets %}

{% endblock %}
{% block content %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            User - Edit
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_page') }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li class="active">User - Edit</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">User Edit</h3>
                        <div class="box-tools pull-right">
                            <a href="{{ path('admin_user_page', {}) }}"
                               class="btn btn-sm btn-success"><i class="fa fa-arrow-left"></i> Back to the list</a>
                        </div>
                    </div>
                    {{ form_start(data.admin_user_edit_form) }}
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12 col-md-6">

                                <div class="form-group">
                                    {{ form_label(data.admin_user_edit_form.username) }}
                                    {{ form_errors(data.admin_user_edit_form.username) }}
                                    {{ form_widget(data.admin_user_edit_form.username, {'attr': {'class':'form-control','placeholder':'Username'}}) }}
                                </div>

                            </div>

                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    {{ form_label(data.admin_user_edit_form.status) }}
                                    {{ form_errors(data.admin_user_edit_form.status) }}
                                    {{ form_widget(data.admin_user_edit_form.status, {'attr': {'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="box-footer clearfix">
                        <div class="row">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-primary pull-right">Update</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(data.admin_user_edit_form) }}
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->

        </div>
        <!-- /.row -->

    </section><!-- /.content -->
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('/web/themes/admin/plugins/iCheck/icheck.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/web/themes/admin/js/admin_user/admin_user_edit_page.js') }}"></script>
{% endblock %}